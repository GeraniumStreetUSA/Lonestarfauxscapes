  <footer>© <span id="year"></span> Lone Star Faux Scapes. Fire-rated greenery systems across Texas.</footer>

  <script>
    const header = document.getElementById('site-header');
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting) header.classList.remove('scrolled');
        else header.classList.add('scrolled');
      });
    }, { threshold: 0 });
    observer.observe(document.body);

    // Reveal on scroll
    const reveals = document.querySelectorAll('.io-reveal');
    const io = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting) e.target.classList.add('visible');
      });
    }, { threshold: 0.1 });
    reveals.forEach(r => io.observe(r));

    // Quick jump bar
    const jumpPills = document.querySelectorAll('.jump-pill');
    jumpPills.forEach(p => {
      p.addEventListener('click', () => {
        const target = document.getElementById(p.dataset.target);
        if (target) target.scrollIntoView({ behavior: 'smooth', block: 'start' });
      });
    });
    const sections = ['systems','fire','process','installs','faqs'].map(id => document.getElementById(id)).filter(Boolean);
    const jumpObserver = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting) {
          jumpPills.forEach(p => p.classList.toggle('active', p.dataset.target === e.target.id));
        }
      });
    }, { threshold: 0.35 });
    sections.forEach(s => jumpObserver.observe(s));

    // System filters
    const filters = document.querySelectorAll('.filter-pill');
    const cards = document.querySelectorAll('#system-cards .card');
    filters.forEach(f => {
      f.addEventListener('click', () => {
        filters.forEach(x => x.classList.remove('active'));
        f.classList.add('active');
        const tag = f.dataset.filter;
        cards.forEach(c => {
          if (tag === 'all' || c.dataset.tags.includes(tag)) c.style.display = '';
          else c.style.display = 'none';
        });
      });
    });

    // Bars animate
    const barObserver = new IntersectionObserver((entries) => {
      entries.forEach(e => {
        if (e.isIntersecting) {
          const fill = e.target.querySelector('.bar-fill');
          if (fill && !fill.dataset.done) {
            fill.style.width = fill.dataset.fill + '%';
            fill.dataset.done = true;
          }
        }
      });
    }, { threshold: 0.4 });
    document.querySelectorAll('.city-bar').forEach(c => barObserver.observe(c));

    // FAQ icon toggle
    document.querySelectorAll('details').forEach(d => {
      d.addEventListener('toggle', () => {
        const icon = d.querySelector('.faq-icon');
        if (icon) icon.textContent = d.open ? '−' : '+';
      });
    });

    // Year
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
